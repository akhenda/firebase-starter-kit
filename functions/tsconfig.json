{
  "extends": "eslint-config-heimdall/tsconfig.base",
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "@root/*": ["./*"],
      "@src/*": ["src/*"],
      "@models/*": ["src/models/*"],
      "@utils/*": ["src/utils/*"],
      "@servers/*": ["src/servers/*"],
      "@services/*": ["src/services/*"]
    }
  },
  "compileOnSave": true,
  "include": ["index.ts", "src", "modules.d.ts"]
}
